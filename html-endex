  <!-- الكارت الرئيسي -->
  <div class="card" id="content" class="hidden">
    <!-- مرحلة 1: هل ارثن فرخ؟ -->
    <div id="step1">
      <div class="question">هل أرثن فرخ؟</div>
      <div class="buttons">
        <button onclick="fromYes()">نعم</button>
        <button onclick="fromNo()">لا</button>
      </div>
    </div>

    <!-- مرحلة 2 (من لا): ارثن فرخ كلش مو -->
    <div id="stepNo1" class="hidden">
      <div class="question">أرثن فرخ كلش مو؟</div>
      <div class="buttons">
        <button onclick="showFinal1()">اي اوف</button>
        <button onclick="showFinal1()">اي اويلي علي</button>
      </div>
    </div>

    <!-- مرحلة 2 (من نعم): و امه حلوه؟ -->
    <div id="stepYes1" class="hidden">
      <div class="question">وإمه حلوه؟</div>
      <div class="buttons">
        <button onclick="stepYes2()">اي على امه هو</button>
        <button onclick="stepYes2()">ايي تخبل</button>
      </div>
    </div>

    <!-- مرحلة 3 بعد امه: تريد تنيجه هوه وامه؟ -->
    <div id="stepYes2" class="hidden">
      <div class="question">تريد تنيجه هوه وإمه؟</div>
      <div class="buttons">
        <button onclick="showFinal2()">اي</button>
        <button onclick="showFinal2()">اوف اي</button>
      </div>
    </div>

    <!-- رسالة نهائية 1 -->
    <div id="final1" class="hidden">
      <div class="big-message">عفيه بلشطور نيج امه اله</div>
    </div>

    <!-- رسالة نهائية 2 -->
    <div id="final2" class="hidden">
      <div class="big-message">شطور نيجه ونيج لامه يلا</div>
    </div>
  </div>

  <script>
    // إظهار المحتوى بعد شاشة التحميل
    window.addEventListener("load", () => {
      setTimeout(() => {
        document.getElementById("loader").classList.add("hidden");
        document.getElementById("content").classList.remove("hidden");
      }, 2300); // 2.3 ثانية فخامة
    });

    function hideAllSteps() {
      ["step1", "stepNo1", "stepYes1", "stepYes2", "final1", "final2"].forEach(id => {
        document.getElementById(id).classList.add("hidden");
      });
    }

    function fromNo() {
      hideAllSteps();
      document.getElementById("stepNo1").classList.remove("hidden");
    }

    function fromYes() {
      hideAllSteps();
      document.getElementById("stepYes1").classList.remove("hidden");
    }

    function stepYes2() {
      hideAllSteps();
      document.getElementById("stepYes2").classList.remove("hidden");
    }

    function showFinal1() {
      hideAllSteps();
      document.getElementById("final1").classList.remove("hidden");
    }

    function showFinal2() {
      hideAllSteps();
      document.getElementById("final2").classList.remove("hidden");
    }
  </script>
</body>
